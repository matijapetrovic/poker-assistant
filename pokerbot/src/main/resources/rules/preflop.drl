    when
        $hi: HandInfo($card1: card1, $card2: card2, matrixAction.getValue() == Action.RAISE, action == null)
    then
        System.out.println("Hand: " + $card1 + " " + $card2);
        modify($hi) {
        	setPreliminaryAction(BongcloudAction.RAISE)
        }
end