package rules

import bots.bongcloudbot.HandInfo;
import bots.bongcloudbot.BongcloudAction;
import com.biotools.meerkat.Action;



rule "Set starting hand matrix"
    when
        $hi: HandInfo($card1: card1, $card2: card2, preliminaryAction == null)
    then
        modify($hi) {
        	setMatrixAction($card1, $card2)
        }
end

rule "Set preliminaryAction - Action FOLD"
    when
        $hi: HandInfo($card1: card1, $card2: card2, matrixAction.getValue() == Action.FOLD, action == null)
    then
        System.out.println("Hand: " + $card1 + " " + $card2);
        modify($hi) {
        	setPreliminaryAction(BongcloudAction.FOLD)
        }
end


rule "Set preliminaryAction - Action CHECK"
    when
        $hi: HandInfo($card1: card1, $card2: card2, matrixAction.getValue() == Action.CALL, action == null)
    then
        System.out.println("Hand: " + $card1 + " " + $card2);
        modify($hi) {
        	setPreliminaryAction(BongcloudAction.CALL)
        }
end


